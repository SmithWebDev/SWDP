<%= form_with(model: blog, local: true) do |form| %>
  <% if blog.errors.any? %>
    <% blog.errors.full_messages.each do |error|%>
      <%= js add_gritter(error,  title: 'SWD', sticky: false) %>
    <% end %>
  <% end %>

  <div class="form-group">
    <%= form.label :title, style: 'display: none;' %>
    <%= form.text_field :title, class: 'form-control', placeholder: 'Title' %>
  </div>

  <div class="form-group">
    <%= form.label :body, style: 'display: none;' %>
    <%= form.text_area :body, class: 'form-control', rows: 15, placeholder: 'Content' %>
  </div>

  <div class="form-group">
    <%# form.label :topic %>
    <%# form.select :topic_id, options_from_collection_for_select(Topic.all) %>
  </div>

  <div class="form-group">
    <%= form.submit "Submit", class: 'btn btn-primary'%>
  </div>
<% end %>
