<div class="album text-muted">
  <div class="container">

    <%= source_helper('alert alert-warning') %>
      <div class="row">
        <%= link_to "Create New Item", new_portfolio_path if logged_in?(:site_admin, :tester) %>
      </div>
    <div class="row <%= "sortable" if logged_in?(:site_admin, :tester) %>">

      <!-- Manual Collection requires to explicitly state the name of the partial, and direct the collection to the instance variable-->
      <%= render partial: 'portfolio_item', collection: @portfolio_items  %>
    </div>
  </div>
</div>
