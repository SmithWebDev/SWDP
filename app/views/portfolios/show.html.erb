<div class="container port-container">
  <div class="row">
    <div class="col-md-7"><%= image_tag port_img(@portfolio_item.thumb_image, 'main'), width: "100%" %></div>
    <div class="col-md-5">

      <h1><%= @portfolio_item.title %></h1>
      <hr>
      <em><%= @portfolio_item.subtitle%></em>
      <p><%= @portfolio_item.body%></p>
      <hr>
      <h2>Technologies Used</h2> 
      <% @portfolio_item.technologies.each do |t| %>
        <p><%= t.name %></p>
      <% end %>
    </div>
  </div>
</div>




